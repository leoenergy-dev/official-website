---
interface Props {
  image: string;
  description: string;
  titre?: string;
  rtl?: boolean;
}

const { image, description, titre, rtl } = Astro.props as Props;
---

<section class='story px-[50px]'>
  <div class=`flex gap-[50px] ${rtl ? 'flex-row-reverse': ''}`>
    <div class='w-[590px] aspect-square'>
      <img
        src=`${image}`
        alt=''
        width='100%'
        height='100%'
        class='object-cover h-full'
      />
    </div>
    <div class=`flex-1`>
      {titre && <div class='text-2xl font-bold uppercase'>{titre}</div>}
      <div class=''>
        {description}
      </div>
    </div>
  </div>
</section>

<style>
  .story + .story {
    margin-top: 82px;
  }
</style>
