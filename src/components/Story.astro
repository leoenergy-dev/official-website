---
interface Props {
  image: string;
  description: string;
  titre?: string;
  rtl?: boolean;
}

const { image, description, titre, rtl } = Astro.props as Props;
---

<section class='story px-5 lg:px-[50px]'>
  <div
    class=`flex flex-col lg:flex-row gap-[50px] ${rtl ? 'lg:flex-row-reverse': ''}`>
    <div class='w-full lg:w-[590px] aspect-square'>
      <img
        src=`${image}`
        alt=''
        width='100%'
        height='100%'
        class='object-cover h-full'
      />
    </div>
    <div
      class=`flex-1`
      data-aos='fade-up'
      data-aos-duration='1000'
      data-aos-delay='500'>
      {titre && <div class='text-2xl font-bold uppercase'>{titre}</div>}
      <div class=''>
        {description}
      </div>
    </div>
  </div>
</section>

<style>
  .story + .story {
    margin-top: 82px;
  }
</style>
